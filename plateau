#include <stdio.h>
#include <stdlib.h>

#define ROWS 6
#define COLS 8

// Exemple de plateau simplifié
char board[ROWS][COLS] = {
    {'S','F','F','F','O','M','P','S'},
    {'O','F','P','O','M','S','F','P'},
    {'M','O','F','P','S','F','O','M'},
    {'S','P','O','M','F','P','S','F'},
    {'F','M','S','F','O','M','P','S'},
    {'O','S','M','P','F','O','M','F'}
};

// Vérifie et supprime les groupes horizontaux de 3+
void supprimerGroupes() {
    for(int i=0; i<ROWS; i++) {
        for(int j=0; j<COLS-2; j++) {
            if(board[i][j] != ' ' &&
               board[i][j] == board[i][j+1] &&
               board[i][j] == board[i][j+2]) {
                // supprime le groupe
                board[i][j]   = ' ';
                board[i][j+1] = ' ';
                board[i][j+2] = ' ';
            }
        }
    }
}

